<?xml version="1.0" encoding="UTF-8"?>
<config>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <verbs>SOURCE,EXISTS</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ForumAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum</identifier>
        <argument name="forumGroupId"/>
        <argument name="order"/>
        <argument name="title"/>
        <argument name="description"/>
      </active>
    </grammar>
    <verbs>NEW</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ForumAccessor</argument>
      <argument name="forumGroupId">arg:forumGroupId</argument>
      <argument name="order">arg:order</argument>
      <argument name="title">arg:title</argument>
      <argument name="description">arg:description</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum</identifier>
        <argument name="id"/>
        <argument name="order"/>
        <argument name="title"/>
        <argument name="description"/>
      </active>
    </grammar>
    <verbs>SINK</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ForumAccessor</argument>
      <argument name="id">arg:id</argument>
      <argument name="order">arg:order</argument>
      <argument name="title">arg:title</argument>
      <argument name="description">arg:description</argument>
    </request>
  </endpoint>
  
  <endpoint>
    <id>nk4um:db:forum:breadcrumbs</id>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:breadcrumbs</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.BreadcrumbsAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:list</identifier>
        <argument name="forumGroupId"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ListAccessor</argument>
      <argument name="forumGroupId">arg:forumGroupId</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:list:all</identifier>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ListAllAccessor</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:meta</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.MetaAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:lastPost</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.LastPostAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  
  <!-- moderators -->
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:moderators</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ModeratorListAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:moderator</identifier>
        <argument name="id"/>
        <argument name="userId"/>
      </active>
    </grammar>
    <verbs>EXISTS,NEW</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ModeratorAccessor</argument>
      <argument name="id">arg:id</argument>
      <argument name="userId">arg:userId</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:forum:moderator:fullList</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.forum.ModeratorFullListAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
</config>