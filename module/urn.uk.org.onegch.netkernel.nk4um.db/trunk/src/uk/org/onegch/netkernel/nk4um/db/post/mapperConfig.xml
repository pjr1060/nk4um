<?xml version="1.0" encoding="UTF-8"?>
<config>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.PostAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post</identifier>
        <argument name="topicId"/>
        <argument name="authorId"/>
        <argument name="title"/>
        <argument name="content"/>
        <argument name="status"/>
      </active>
    </grammar>
    <verbs>NEW</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.PostAccessor</argument>
      <argument name="topicId">arg:topicId</argument>
      <argument name="authorId">arg:authorId</argument>
      <argument name="title">arg:title</argument>
      <argument name="content">arg:content</argument>
      <argument name="status">arg:status</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post:list</identifier>
        <argument name="topicId"/>
        <argument name="limit" min="0" max="1"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.ListAccessor</argument>
      <argument name="topicId">arg:topicId</argument>
      <argument name="limit">arg:limit</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post:listAll</identifier>
        <argument name="limit" min="0" max="1"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.ListAllAccessor</argument>
      <argument name="limit">arg:limit</argument>
    </request>
  </endpoint>

  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post:status</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <verbs>SINK</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.StatusAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:db:post:moderationList</identifier>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.db.post.ModerationListAccessor</argument>
    </request>
  </endpoint>
</config>