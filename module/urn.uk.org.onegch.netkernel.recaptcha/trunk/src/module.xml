<module version="2.0">
  <meta>
    <identity>
      <uri>urn:uk:org:onegch:netkernel:recaptcha</uri>
      <version>1.0.0</version>
    </identity>
    <info>
      <name>1gch / reCaptcha</name>
      <description>Allows use of reCaptcha in NK</description>
    </info>
  </meta>

  <system>
    <dynamic/>
  </system>
  
  <!-- Space for handing web requests -->
  <rootspace name="1gch / reCaptcha" uri="urn:uk:org:onegch:netkernel:recaptcha" public="true">
    <accessor>
      <id>recaptcha.embed</id>
      <class>uk.org.onegch.netkernel.recaptcha.ReCaptchaAccessor</class>
      <grammar>
        <active>
          <identifier>active:recaptcha</identifier>
        </active>
      </grammar>
    </accessor>
    <accessor>
      <id>recaptcha.verify</id>
      <class>uk.org.onegch.netkernel.recaptcha.VerifyAccessor</class>
      <grammar>
        <active>
          <identifier>active:recaptcha-verify</identifier>
          <argument name="challenge" min="1" max="1"/>
          <argument name="response" min="1" max="1"/>
          <argument name="remoteAddr" min="1" max="1"/>
        </active>
      </grammar>
    </accessor>
  </rootspace>
</module>
