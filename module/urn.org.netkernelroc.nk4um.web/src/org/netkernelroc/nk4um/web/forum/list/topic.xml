<tr xmlns:xrl="http://netkernel.org/xrl"
    xmlns:nk4um="http://netkernelroc.org/nk4um"
    class="topic-${nk4um:status}">
  <td class="descriptionColumn stretchedColumn">
    <div><a href="meta:nk4um:web:topic" xrl:resolve="href" xrl:argument-id="${nk4um:id}"><nk4um:title/></a></div>
    <div><nk4um:description/></div>
  </td>
  <td class="fixedColumn centerColumn"><nk4um:postCount/></td>
  <td class="fixedColumn centerColumn"><nk4um:viewCount/></td>
  <td class="fixedColumn">
    <xrl:include>
      <xrl:identifier>nk4um:web:forum:topicLastPost</xrl:identifier>
      <xrl:argument name="topicId"><literal type="string"><nk4um:id/></literal></xrl:argument>
    </xrl:include>
  </td>
  <nk4um:moderator>
    <td class="fixedColumn">
      <form action="meta:nk4um:web:topic:doUpdate" xrl:resolve="action" xrl:argument-id="${nk4um:id}" method="POST">
        <input type="checkbox" name="locked"/> Locked<br/>
        <select name="status">
          <option value="active">Active</option>
          <option value="sticky">Sticky</option>
          <option value="deleted">Deleted</option>
        </select>
        <button type="submit">Update</button>
      </form>
    </td>
  </nk4um:moderator>
  <td><nk4um:statusOrder/></td>
</tr>