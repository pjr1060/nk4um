<config xmlns:xrl="http://netkernel.org/xrl">
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/forumGroup/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/forum/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/topic/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/author/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/message/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/style/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/security/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/post/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/user/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/navigation/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/role/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/notification/mapperConfig.xml" />
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/atom/mapperConfig.xml" />

  <endpoint>
    <id>nk4um:web:index</id>
    <grammar>res:/nk4um/<group><optional>index</optional></group></grammar>
    <header name="nk4umAutoStyle">true</header>
    <request>
      <identifier>active:xrl2</identifier>
      <argument name="template">res:/uk/org/onegch/netkernel/nk4um/web/index.xml</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:atom:index</id>
    <grammar>res:/nk4um/atom.xml</grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.AtomIndexAccessor</argument>
    </request>
  </endpoint>


  <endpoint>
    <id>nk4um:web:forum</id>
    <grammar>
      res:/nk4um/forum/
      <group name="id"><regex type="integer"/></group>
      /<group><optional>index</optional></group>
    </grammar>
    <header name="nk4umAutoStyle">true</header>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.list.ForumAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:atom:forum</id>
    <grammar>
      res:/nk4um/forum/
      <group name="id"><regex type="integer"/></group>
      /atom.xml
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.list.AtomForumAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>

  <endpoint>
    <id>nk4um:web:topic</id>
    <grammar>
      res:/nk4um/topic/
      <group name="id"><regex type="integer"/></group>
      /<group><optional>index</optional></group>
    </grammar>
    <header name="nk4umAutoStyle">true</header>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.topic.list.TopicAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:atom:topic</id>
    <grammar>
      res:/nk4um/topic/
      <group name="id"><regex type="integer"/></group>
      /atom.xml
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.topic.list.AtomTopicAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
</config>