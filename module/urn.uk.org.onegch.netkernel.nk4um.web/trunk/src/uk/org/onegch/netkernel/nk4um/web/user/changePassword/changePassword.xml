<nk4um:page xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um"
            xmlns:xrl="http://netkernel.org/xrl">
  <nk4um:title>Change Password - nk4um</nk4um:title>
  <nk4um:heading>Change Password</nk4um:heading>
  <nk4um:tagLine>Change your nk4um password</nk4um:tagLine>
  <nk4um:breadcrumbs>
    <ul>
      <li>
        <a href="meta:nk4um:web:index" xrl:resolve="href">Forum Index</a>
      </li>
      <li>
        <span class="seperator">/</span>
      </li>
      <li>
        <a href="meta:nk4um:web:user:changePassword" xrl:resolve="href">Change Password</a>
      </li>
    </ul>
  </nk4um:breadcrumbs>
  <nk4um:head/>
  <nk4um:content>
    <form class="styled-form compact-form" action="doChangePassword" method="POST">
      <div class="form-header">
        <h3>Change Password</h3>
      </div>
      <div class="form-body">
        <div>
          <label for="current_password">Current Password:</label>
          <input type="password" name="current_password"/>
        </div>
        <div>
          <label for="new_password">New Password:</label>
          <input type="password" name="password"/>
        </div>
        <div>
          <label for="new_password">Confirm Password:</label>
          <input type="password" name="confirm_password"/>
        </div>
      </div>
      <div class="form-footer">
        <button type="submit">Change Password</button>
      </div>
    </form>
    
  </nk4um:content>
</nk4um:page>
