<?xml version="1.0" encoding="UTF-8"?>
<nk4um:group xmlns:xrl="http://netkernel.org/xrl"
             xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um">
  <thead>
    <tr class="forumGroupHeader">
      <th colspan="4">
        <div class="forumGroupTitle"><nk4um:title/></div>
        <div class="forumGroupDescription"><nk4um:description/></div>
      </th>
    </tr>
    <tr>
      <th class="stretchingColumn ui-state-default">Forums</th>
      <th class="fixedColumn centerColumn ui-state-default">Topics</th>
      <th class="fixedColumn centerColumn ui-state-default">Posts</th>
      <th class="fixedColumn ui-state-default">Last Post</th>
    </tr>
  </thead>
  <tbody class="forumGroup">
    <xrl:include>
      <xrl:identifier>nk4um:web:forumGroupList:forumList</xrl:identifier>
      <xrl:argument name="id"><literal type="string"><nk4um:id/></literal></xrl:argument>
    </xrl:include>
  </tbody>
  <tbody class="emptyRow">
    <tr>
      <td colspan="4"></td>
    </tr>
  </tbody>
</nk4um:group>