<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xrl="http://netkernel.org/xrl">
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/forum/list/mapperConfig.xml" />
  
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:web:forum:title</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.TitleAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:web:forum:description</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.DescriptionAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:web:forum:breadcrumbs</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.BreadcrumbsAccessor</argument>
      <argument name="id">arg:id</argument>
    </request>
  </endpoint>

  <endpoint>
    <id>nk4um:web:forum:subscribe</id>
    <grammar>
      res:/nk4um/forum/
      <group name="id"><regex type="integer"/></group>
      /doSubscribe
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.SubscribeAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:web:forum:unsubscribe</id>
    <grammar>
      res:/nk4um/forum/
      <group name="id"><regex type="integer"/></group>
      /doUnsubscribe
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.forum.UnsubscribeAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
</config>
