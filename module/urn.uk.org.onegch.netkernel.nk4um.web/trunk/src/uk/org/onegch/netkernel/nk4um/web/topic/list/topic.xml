<?xml version="1.0" encoding="UTF-8"?>
<nk4um:page xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um"
            xmlns:xrl="http://netkernel.org/xrl">
  <nk4um:title>
    <nk4um:group>
      <xrl:eval>
        <xrl:xpath>..</xrl:xpath>
        <xrl:identifier>nk4um:web:topic:title</xrl:identifier>
        <xrl:argument name="id">arg:id</xrl:argument>
      </xrl:eval>
    </nk4um:group>
    - nk4um
  </nk4um:title>
  <nk4um:heading>nk4um Forum</nk4um:heading>
  <nk4um:tagLine>
    <xrl:eval>
      <xrl:xpath>..</xrl:xpath>
      <xrl:identifier>nk4um:web:topic:title</xrl:identifier>
      <xrl:argument name="id">arg:id</xrl:argument>
    </xrl:eval>
  </nk4um:tagLine>
  <nk4um:head>
    <link href="atom.xml" type="application/atom+xml" rel="alternate" title="nk4um / ${nk4um:title}" />
    <script type="text/javascript">
      $(document).ready(function() {
        var columns;

        if ($("#topicTable thead tr th").size() == 3) {
          columns= [ null,
                     { "sType": "iso-date" },
                     null
                   ];
        } else {
          columns= [ null,
                     { "sType": "iso-date" },
                   ];
        }
        $("#topicTable").dataTable({
          "bJQueryUI": true,
          "sPaginationType": "full_numbers",
          "aaSorting": [[1,'desc']],
          "aoColumns": columns
        });
      });
    </script>
  </nk4um:head>
  <nk4um:breadcrumbs>
    <xrl:include>
      <xrl:identifier>nk4um:web:topic:breadcrumbs</xrl:identifier>
      <xrl:argument name="id">arg:id</xrl:argument>
    </xrl:include>
  </nk4um:breadcrumbs>
  <nk4um:content>
    <div id="button-bar">
      <nk4um:moderator>
        <form style="display: inline-block; float: left;" action="meta:nk4um:web:topic:doUpdate" xrl:resolve="action" xrl:argument-id="${nk4um:id}" method="POST">
          Status: 
          <select name="status">
            <option value="active">Active</option>
            <option value="sticky">Sticky</option>
            <option value="deleted">Deleted</option>
          </select>
          <button type="submit">Update</button>
        </form>
      </nk4um:moderator>
      <form action="atom.xml" style="display: inline"><button type="submit">Atom Feed</button></form>
      <form action="post/add" style="display: inline"><button type="submit">Post Reply</button></form>
    </div>
    <table id="topicTable"
           class="forumTable"
           xmlns:xrl="http://netkernel.org/xrl">
      <thead>
        <tr>
          <th class="fixedColumn">Poster</th>
          <th class="stretchedColumn">Content</th>
          <nk4um:moderator>
            <th class="fixedColumn">Moderator</th>
          </nk4um:moderator>
        </tr>
      </thead>
      <tbody class="forumGroup">
        <xrl:include>
          <xrl:identifier>nk4um:web:topic:postList</xrl:identifier>
          <xrl:argument name="id"><literal type="string"><nk4um:id/></literal></xrl:argument>
          <xrl:argument name="displayModeration"><literal type="boolean">true</literal></xrl:argument>
        </xrl:include>
      </tbody>
    </table>
  </nk4um:content>
</nk4um:page>

