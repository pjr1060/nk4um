<?xml version="1.0" encoding="UTF-8"?>
<nk4um:page xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um"
            xmlns:xrl="http://netkernel.org/xrl">
  <nk4um:title>
    <nk4um:group>
      <xrl:eval>
        <xrl:xpath>..</xrl:xpath>
        <xrl:identifier>nk4um:web:topic:title</xrl:identifier>
        <xrl:argument name="id">arg:id</xrl:argument>
      </xrl:eval>
    </nk4um:group>
    - nk4um
  </nk4um:title>
  <nk4um:heading>nk4um Forum</nk4um:heading>
  <nk4um:head/>
  <nk4um:breadcrumbs>
    <xrl:include>
      <xrl:identifier>nk4um:web:topic:breadcrumbs</xrl:identifier>
      <xrl:argument name="id">arg:id</xrl:argument>
    </xrl:include>
  </nk4um:breadcrumbs>
  <nk4um:content>
    <div id="button-bar">
      <a href="post/add" class="button">Post Reply</a>
    </div>
    <table id="topicTable"
           class="forumTable"
           xmlns:xrl="http://netkernel.org/xrl">
      <thead>
        <tr>
          <th class="fixedColumn">Poster</th>
          <th class="fixedColumn">Post Date</th>
          <th class="stretchedColumn">Content</th>
        </tr>
      </thead>
      <tbody class="forumGroup">
        <xrl:include>
          <xrl:identifier>nk4um:web:topic:postList</xrl:identifier>
          <xrl:argument name="id"><literal type="string"><nk4um:id/></literal></xrl:argument>
        </xrl:include>
      </tbody>
    </table>
  </nk4um:content>
</nk4um:page>

