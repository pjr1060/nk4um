<?xml version="1.0" encoding="UTF-8"?>
<nk4um:group xmlns:xrl="http://netkernel.org/xrl"
             xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um">
  <tr>
    <td class="fixedColumn">
      <div style="font-weight: bold;"><nk4um:displayName/></div>
      <div class="post-role">
        <xrl:eval>
          <xrl:identifier>nk4um:web:user:roleForForum</xrl:identifier>
          <xrl:xpath>..</xrl:xpath>
          <xrl:argument name="userId">
            <literal type="string"><nk4um:userId/></literal>
          </xrl:argument>
          <xrl:argument name="forumId">
            <literal type="string"><nk4um:forumId/></literal>
          </xrl:argument>
        </xrl:eval>
      </div>
      <div>Posts: <nk4um:postCount/></div>
    </td>
    <td class="fixedColumn">
      <div class="date-time">
        <span class="date"><nk4um:postedDate/></span>&#160;<span class="time"><nk4um:postedTime/></span>
      </div>
    </td>
    <td class="stretchedColumn">
      <div class="post-title"><nk4um:title/></div>
      <div class="post-content">
        <xrl:include>
          <xrl:identifier>active:wikiParser/XHTML</xrl:identifier>
          <xrl:argument name="operand">
            <literal type="string"><nk4um:content/></literal>
          </xrl:argument>
        </xrl:include>
      </div>
    </td>
  </tr>
</nk4um:group>