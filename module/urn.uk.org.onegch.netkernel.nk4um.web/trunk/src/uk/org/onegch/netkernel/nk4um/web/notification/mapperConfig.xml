<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xrl="http://netkernel.org/xrl">
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:web:notification:send</identifier>
        <argument name="forumId"/>
        <argument name="authorId"/>
        <argument name="title"/>
        <argument name="content"/>
        <argument name="topicId" min="0" max="1"/>
      </active>
    </grammar>
    <verbs>SINK</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.notification.SendAccessor</argument>
      <argument name="forumId">arg:forumId</argument>
      <argument name="authorId">arg:authorId</argument>
      <argument name="title">arg:title</argument>
      <argument name="content">arg:content</argument>
      <argument name="topicId">arg:topicId</argument>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>nk4um:web:notification:send:forumModerators</identifier>
        <argument name="forumId"/>
        <argument name="title"/>
        <argument name="content"/>
      </active>
    </grammar>
    <verbs>SINK</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.notification.ForumModeratorsSendAccessor</argument>
      <argument name="forumId">arg:forumId</argument>
      <argument name="title">arg:title</argument>
      <argument name="content">arg:content</argument>
    </request>
  </endpoint>

</config>