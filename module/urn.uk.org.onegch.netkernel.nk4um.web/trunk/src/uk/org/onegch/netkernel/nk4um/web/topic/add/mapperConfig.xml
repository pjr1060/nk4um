<?xml version="1.0" encoding="UTF-8"?>
<config>
  <endpoint>
    <id>nk4um:web:forum:topic:add</id>
    <grammar>
      res:/nk4um/forum/
      <group name="id"><regex type="integer"/></group>
      /topic/add
    </grammar>
    <header name="nk4umAutoStyle">true</header>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.topic.add.AddFormAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:web:forum:topic:doAdd</id>
    <grammar>
      res:/nk4um/forum/
      <group name="forumId"><regex type="integer"/></group>
      /topic/doAdd
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.topic.add.DoAddAccessor</argument>
      <argument name="forumId" method="as-string">arg:forumId</argument>
    </request>
  </endpoint>
</config>