<?xml version="1.0" encoding="UTF-8"?>
<nk4um:page xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um"
            xmlns:xrl="http://netkernel.org/xrl">
  <nk4um:title>Lost Password - nk4um</nk4um:title>
  <nk4um:heading>Lost Password</nk4um:heading>
  <nk4um:tagLine>Recover Lost Password</nk4um:tagLine>
  <nk4um:breadcrumbs>
    <ul>
      <li>
        <a href="meta:nk4um:web:index" xrl:resolve="href">Forum Index</a>
      </li>
      <li>
        <span class="seperator">/</span>
      </li>
      <li>
        <a href="meta:nk4um:web:user:lostPassword" xrl:resolve="href">Lost Password</a>
      </li>
    </ul>
  </nk4um:breadcrumbs>
  <nk4um:head/>
  <nk4um:content>
    <form class="compact-form" action="doLostPassword" method="POST">
      <div class="form-header">
        <h3>Lost Password</h3>
      </div>
      <div class="form-body">
        <p>
          Your account will be disabled with an activation key sent to your
          email address. After re-activating, you will be able to login with
          the password you set below.
        </p>
        <div>
          <label for="current_password">Email Address:</label>
          <input type="text" name="email"/>
        </div>
        <div>
          <label for="new_password">New Password:</label>
          <input type="password" name="new_password"/>
        </div>
        <div>
          <label for="confirm_password">Confirm Password:</label>
          <input type="password" name="confirm_password"/>
        </div>
      </div>
      <div class="form-footer">
        <button type="submit">Change Password</button>
      </div>
    </form>
    
  </nk4um:content>
</nk4um:page>
