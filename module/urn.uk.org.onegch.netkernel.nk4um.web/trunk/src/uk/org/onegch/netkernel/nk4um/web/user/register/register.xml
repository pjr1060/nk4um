<?xml version="1.0" encoding="UTF-8"?>
<nk4um:page xmlns:nk4um="http://onegch.org.uk/netkernel/nk4um"
            xmlns:xrl="http://netkernel.org/xrl">
  <nk4um:title>Register New Account - nk4um</nk4um:title>
  <nk4um:heading>Register New Account</nk4um:heading>
  <nk4um:tagLine>Registering allows you to create new topics and post replies</nk4um:tagLine>
  <nk4um:breadcrumbs>
    <ul>
      <li>
        <a href="meta:nk4um:web:index" xrl:resolve="href">Forum Index</a>
      </li>
      <li>
        <span class="seperator">/</span>
      </li>
      <li>
        <a href="meta:nk4um:web:user:register" xrl:resolve="href">New User Account</a>
      </li>
    </ul>
  </nk4um:breadcrumbs>
  <nk4um:head/>
  <nk4um:content>
    <form class="compact-form" action="doRegister" method="POST">
      <div class="form-header">
        <h3>Register</h3>
      </div>
      <div class="form-body">
        <fieldset>
          <legend>Account Details</legend>
          <div>
            <label for="email">Email Address:</label>
            <input type="text" name="email"/>
          </div>
          <div>
            <label for="password">Password:</label>
            <input type="password" name="password"/>
          </div>
          <div>
            <label for="confirm">Confirm Password:</label>
            <input type="password" name="confirm"/>
          </div>
        </fieldset>
        <fieldset>
          <legend>Forum Options</legend>
          <div>
            <label for="display">Display Name:</label>
            <input type="text" name="display"/>
          </div>
        </fieldset>
        <fieldset>
          <legend>You are a human, right?</legend>
          <xrl:include>
            <xrl:identifier>active:recaptcha</xrl:identifier>
          </xrl:include>
        </fieldset>
      </div>
      <div class="form-footer">
        <button type="submit">Register</button>
      </div>
    </form>
    
  </nk4um:content>
</nk4um:page>
