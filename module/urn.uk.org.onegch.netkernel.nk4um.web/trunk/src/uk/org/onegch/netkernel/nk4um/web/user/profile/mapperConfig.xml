<config xmlns:xrl="http://netkernel.org/xrl">
  <xrl:include identifier="res:/uk/org/onegch/netkernel/nk4um/web/user/profile/subscription/mapperConfig.xml" />
  <endpoint>
    <id>nk4um:web:user:profile</id>
    <grammar>res:/nk4um/user/profile</grammar>
    <header name="nk4umAutoStyle">true</header>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.user.profile.ProfileFormAccessor</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:web:user:profile:doUpdate</id>
    <grammar>
      res:/nk4um/user/doUpdateProfile
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.user.profile.DoUpdateAccessor</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:web:user:profile:doUpdateSubscriptions</id>
    <grammar>
      res:/nk4um/user/doUpdateSubscriptions
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.user.profile.DoUpdateSubscriptionsAccessor</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>nk4um:web:url:user:editAccount</id>
    <grammar>nk4um:web:url:user:editAccount</grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.org.onegch.netkernel.nk4um.web.user.profile.EditAccountUrlAccessor</argument>
    </request>
  </endpoint>
</config>
